@model IEnumerable<WAMVC.Models.ClienteModel>

@{
    ViewData["Title"] = "Clientes";
}

<div class="row mb-4">
    <div class="col">
        <h1 class="form-title">
            <i class="bi bi-people me-2"></i>Clientes
        </h1>
    </div>
</div>

<div class="form-buttons mb-4">
    <a asp-action="Create" class="btn-form-primary">
        <i class="bi bi-plus-circle"></i> Crear Nuevo
    </a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Direccion)
                </th>
                <th class="text-end">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Direccion)
                    </td>
                    <td class="table-actions">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-table btn-table-edit">
                            <i class="bi bi-pencil"></i> Editar
                        </a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-table btn-table-view">
                            <i class="bi bi-eye"></i> Ver
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-table btn-table-delete">
                            <i class="bi bi-trash"></i> Eliminar
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info mt-4">
        <h5 class="alert-heading"><i class="bi bi-info-circle me-2"></i>Sin Clientes</h5>
        <p>No hay clientes registrados en el sistema. Puede crear un nuevo cliente usando el botón "Crear Nuevo".</p>
    </div>
}
