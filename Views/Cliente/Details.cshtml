@model WAMVC.Models.ClienteModel

@{
    ViewData["Title"] = "Detalles del Cliente";
}

<div class="row mb-4">
    <div class="col">
        <h1 class="form-title">
            <i class="bi bi-person-badge me-2"></i>Detalles del Cliente
        </h1>
    </div>
</div>

<div class="form-container">
    <div class="row">
        <div class="col-md-6">
            <dl class="row">
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Nombre)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Nombre)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Email)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Email)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Direccion)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Direccion)
                </dd>
            </dl>
            
            <div class="form-buttons">
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn-form-primary">
                    <i class="bi bi-pencil"></i> Editar
                </a>
                <a asp-action="Index" class="btn-form-secondary">
                    <i class="bi bi-arrow-left"></i> Volver a la Lista
                </a>
            </div>
        </div>
        
        <div class="col-md-6">
            <div class="alert alert-info">
                <h5 class="alert-heading"><i class="bi bi-info-circle me-2"></i>Información del Cliente</h5>
                <p>Estos son los datos registrados para este cliente. Puede editarlos usando el botón correspondiente.</p>
            </div>
        </div>
    </div>
</div>
