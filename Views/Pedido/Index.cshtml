@model IEnumerable<WAMVC.Models.PedidoModel>

@{
    ViewData["Title"] = "Pedidos";
}

<div class="row mb-4">
    <div class="col">
        <h1 class="form-title">
            <i class="bi bi-cart3 me-2"></i>Pedidos
        </h1>
    </div>
</div>

<div class="form-buttons mb-4">
    <a asp-action="Create" class="btn-form-primary">
        <i class="bi bi-plus-circle"></i> Crear Nuevo
    </a>
    <a asp-controller="Cliente" asp-action="Index" class="btn-form-secondary">
        <i class="bi bi-people"></i> Lista de Clientes
    </a>
    @if (TempData["ShowCreateTestData"] != null)
    {
        <a asp-action="CrearDatosPrueba" class="btn btn-accent">
            <i class="bi bi-database-add"></i> Crear Datos de Prueba
        </a>
    }
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        <i class="bi bi-check-circle me-2"></i>
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        <i class="bi bi-exclamation-circle me-2"></i>
        @TempData["ErrorMessage"]
    </div>
}

@if (TempData["InfoMessage"] != null)
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle me-2"></i>
        @TempData["InfoMessage"]
    </div>
}

@if (!Model.Any())
{
    <div class="alert alert-info">
        <h5 class="alert-heading"><i class="bi bi-info-circle me-2"></i>Sin Pedidos</h5>
        <p>No hay pedidos registrados en el sistema.</p>
        @if (TempData["ShowCreateTestData"] != null)
        {
            <a asp-action="CrearDatosPrueba" class="btn btn-accent mt-2">
                <i class="bi bi-database-add"></i> Crear Datos de Prueba
            </a>
        }
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Pedido #</th>
                    <th>@Html.DisplayNameFor(model => model.Cliente)</th>
                    <th>@Html.DisplayNameFor(model => model.FechaPedido)</th>
                    <th>@Html.DisplayNameFor(model => model.Estado)</th>
                    <th>@Html.DisplayNameFor(model => model.MontoTotal)</th>
                    <th class="text-end">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@Html.DisplayFor(modelItem => item.Cliente.Nombre)</td>
                        <td>@item.FechaPedido.ToString("dd/MM/yyyy")</td>
                        <td>
                            <span class="badge @(item.Estado == "Completado" ? "bg-success" : 
                                   item.Estado == "Cancelado" ? "bg-danger" : 
                                   item.Estado == "En proceso" ? "bg-primary" : "bg-warning")">
                                @item.Estado
                            </span>
                        </td>
                        <td>
                            <strong>$@Html.DisplayFor(modelItem => item.MontoTotal)</strong>
                        </td>
                        <td class="table-actions">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-table btn-table-edit">
                                <i class="bi bi-pencil"></i> Editar
                            </a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-table btn-table-view">
                                <i class="bi bi-eye"></i> Ver
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-table btn-table-delete">
                                <i class="bi bi-trash"></i> Eliminar
                            </a>
                            <a asp-controller="DetallePedido" asp-action="Create" asp-route-id="@item.Id" class="btn btn-table btn-table-special">
                                <i class="bi bi-plus"></i> Productos
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
