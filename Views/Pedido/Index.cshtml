@model IEnumerable<WAMVC.Models.PedidoModel>

@{
    ViewData["Title"] = "Pedidos";
}

<h1>Pedidos</h1>

<p>
    <a asp-action="Create">Crear Nuevo</a> |
    <a asp-controller="Cliente" asp-action="Index">Lista de Clientes</a>
    @if (TempData["ShowCreateTestData"] != null)
    {
        <text>| </text><a asp-action="CrearDatosPrueba">Crear Datos de Prueba</a>
    }
</p>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

@if (TempData["InfoMessage"] != null)
{
    <div class="alert alert-info">@TempData["InfoMessage"]</div>
}

@if (!Model.Any())
{
    <div class="alert alert-info">
        No hay pedidos registrados.
        @if (TempData["ShowCreateTestData"] != null)
        {
            <br />
            <a asp-action="CrearDatosPrueba">Crear Datos de Prueba</a>
        }
    </div>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Pedido #</th>
                <th>@Html.DisplayNameFor(model => model.Cliente)</th>
                <th>@Html.DisplayNameFor(model => model.FechaPedido)</th>
                <th>@Html.DisplayNameFor(model => model.Estado)</th>
                <th>@Html.DisplayNameFor(model => model.MontoTotal)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@Html.DisplayFor(modelItem => item.Cliente.Nombre)</td>
                    <td>@item.FechaPedido.ToString("dd/MM/yyyy")</td>
                    <td>@item.Estado</td>
                    <td>$@Html.DisplayFor(modelItem => item.MontoTotal)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Detalles</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Eliminar</a> |
                        <a asp-controller="DetallePedido" asp-action="Create" asp-route-id="@item.Id">Productos</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
