@model IEnumerable<WAMVC.Models.DetallePedidoModel>

@{
    ViewData["Title"] = "Detalles de Pedidos";
}

<h1>Detalles de Pedidos</h1>

<p>
    <a asp-action="Create">Crear Nuevo</a> |
    <a asp-controller="Pedido" asp-action="Index">Lista de Pedidos</a> |
    <a asp-controller="Producto" asp-action="Index">Lista de Productos</a>
</p>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<p><em>Importante: Al modificar detalles de pedido, actualice el monto total del pedido.</em></p>

@if (!Model.Any())
{
    <div class="alert alert-info">
        No hay detalles de pedidos registrados.
    </div>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Pedido)</th>
                <th>@Html.DisplayNameFor(model => model.Producto)</th>
                <th>@Html.DisplayNameFor(model => model.Cantidad)</th>
                <th>@Html.DisplayNameFor(model => model.PrecioUnitario)</th>
                <th>Subtotal</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>Pedido #@item.IdPedido</td>
                    <td>@Html.DisplayFor(modelItem => item.Producto.Nombre)</td>
                    <td>@Html.DisplayFor(modelItem => item.Cantidad)</td>
                    <td>$@Html.DisplayFor(modelItem => item.PrecioUnitario)</td>
                    <td>$@(item.Cantidad * item.PrecioUnitario)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Detalles</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
