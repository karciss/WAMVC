@model IEnumerable<WAMVC.Models.DetallePedidoModel>

@{
    ViewData["Title"] = "Detalles de Pedidos";
}

<h1>Detalles de Pedidos</h1>

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <a asp-action="Create" class="btn btn-primary">Crear Nuevo Detalle</a>
        <a asp-controller="Pedido" asp-action="Index" class="btn btn-secondary">Ver Pedidos</a>
        <a asp-controller="Producto" asp-action="Index" class="btn btn-warning">Ver Productos</a>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="alert alert-warning mb-4">
    <i class="bi bi-exclamation-triangle"></i>
    <strong>Importante:</strong> Al añadir, editar o eliminar detalles de pedido, recuerde actualizar manualmente el monto total del pedido correspondiente.
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">
        <h4>No hay detalles de pedidos registrados</h4>
        <p>Para crear un detalle de pedido necesita:</p>
        <ul>
            <li><strong>Al menos un pedido</strong> - <a asp-controller="Pedido" asp-action="Index" class="alert-link">Ver pedidos</a></li>
            <li><strong>Al menos un producto</strong> - <a asp-controller="Producto" asp-action="Index" class="alert-link">Ver productos</a></li>
        </ul>
        <div class="mt-3">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Crear Primer Detalle
            </a>
        </div>
    </div>
}
else
{
    <div class="mb-3">
        <small class="text-muted">Total de detalles: @Model.Count()</small>
    </div>
    
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Pedido)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Producto)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cantidad)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PrecioUnitario)
                </th>
                <th>Subtotal</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    <div class="d-flex justify-content-between align-items-center">
                        <span>Pedido #@Html.DisplayFor(modelItem => item.IdPedido)</span>
                        <a asp-controller="Pedido" asp-action="Edit" asp-route-id="@item.IdPedido" class="btn btn-sm btn-outline-primary">
                            <i class="bi bi-pencil"></i> Editar Pedido
                        </a>
                    </div>
                </td>
                <td>
                    <div>
                        <strong>@Html.DisplayFor(modelItem => item.Producto.Nombre)</strong>
                        @if (!string.IsNullOrEmpty(item.Producto?.Descripcion))
                        {
                            <br><small class="text-muted">@item.Producto.Descripcion</small>
                        }
                    </div>
                </td>
                <td>
                    <span class="badge bg-info">@Html.DisplayFor(modelItem => item.Cantidad)</span>
                </td>
                <td>
                    <span class="text-success fw-bold">$@Html.DisplayFor(modelItem => item.PrecioUnitario)</span>
                </td>
                <td>
                    <span class="text-primary fw-bold">$@(item.Cantidad * item.PrecioUnitario)</span>
                </td>
                <td>
                    <div class="btn-group" role="group">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning" title="Editar">
                            <i class="bi bi-pencil"></i>
                        </a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info" title="Detalles">
                            <i class="bi bi-eye"></i>
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Eliminar">
                            <i class="bi bi-trash"></i>
                        </a>
                    </div>
                </td>
            </tr>
    }
        </tbody>
        <tfoot>
            <tr>
                <th colspan="4" class="text-end">Total General:</th>
                <th class="text-primary">$@Model.Sum(d => d.Cantidad * d.PrecioUnitario)</th>
                <th></th>
            </tr>
        </tfoot>
    </table>
}
