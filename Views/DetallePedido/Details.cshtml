@model WAMVC.Models.DetallePedidoModel

@{
    ViewData["Title"] = "Detalles del Item";
}

<div class="row mb-4">
    <div class="col">
        <h1 class="form-title">
            <i class="bi bi-list-check me-2"></i>Detalles del Item
        </h1>
    </div>
</div>

<div class="form-container">
    <div class="row">
        <div class="col-md-6">
            <dl class="row">
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Pedido)
                </dt>
                <dd class="col-sm-8">
                    Pedido #@Html.DisplayFor(model => model.IdPedido)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Producto)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Producto.Nombre)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Cantidad)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Cantidad)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.PrecioUnitario)
                </dt>
                <dd class="col-sm-8">
                    $@Html.DisplayFor(model => model.PrecioUnitario)
                </dd>
                <dt class="col-sm-4">
                    Subtotal
                </dt>
                <dd class="col-sm-8">
                    <strong>$@(Model.Cantidad * Model.PrecioUnitario)</strong>
                </dd>
            </dl>
            
            <div class="form-buttons">
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn-form-primary">
                    <i class="bi bi-pencil"></i> Editar
                </a>
                <a asp-action="Index" class="btn-form-secondary">
                    <i class="bi bi-arrow-left"></i> Volver a la Lista
                </a>
                <a asp-controller="Pedido" asp-action="Details" asp-route-id="@Model?.IdPedido" class="btn btn-accent">
                    <i class="bi bi-receipt"></i> Ver Pedido
                </a>
            </div>
        </div>
        
        <div class="col-md-6">
            <div class="alert alert-info">
                <h5 class="alert-heading"><i class="bi bi-info-circle me-2"></i>Información del Item</h5>
                <p>Estos son los detalles del item seleccionado del pedido. Puede editarlo o regresar al pedido completo.</p>
            </div>
        </div>
    </div>
</div>
