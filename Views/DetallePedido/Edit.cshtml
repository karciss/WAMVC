@model WAMVC.Models.DetallePedidoModel

@{
    ViewData["Title"] = "Editar Detalle de Pedido";
}

<h1>Editar Detalle de Pedido</h1>

<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="Id" />
            
            <div class="form-group mb-3">
                <label asp-for="IdPedido" class="control-label"></label>
                <select asp-for="IdPedido" class="form-control form-select" asp-items="ViewBag.IdPedido"></select>
                <span asp-validation-for="IdPedido" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="IdProducto" class="control-label"></label>
                <select asp-for="IdProducto" class="form-control form-select" asp-items="ViewBag.IdProducto"></select>
                <span asp-validation-for="IdProducto" class="text-danger"></span>
                <small class="form-text text-muted">Si cambia el producto, el precio unitario se actualizará automáticamente.</small>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Cantidad" class="control-label"></label>
                <input asp-for="Cantidad" class="form-control" type="number" min="1" max="100" />
                <span asp-validation-for="Cantidad" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="PrecioUnitario" class="control-label"></label>
                <div class="input-group">
                    <span class="input-group-text">$</span>
                    <input asp-for="PrecioUnitario" class="form-control" type="number" step="0.01" min="0.01" />
                </div>
                <span asp-validation-for="PrecioUnitario" class="text-danger"></span>
                <small class="form-text text-muted">Puede modificar el precio manualmente si es necesario.</small>
            </div>
            
            <div class="form-group mt-4">
                <input type="submit" value="Guardar Cambios" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary ms-2">Volver a la lista</a>
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info ms-2">Ver Detalles</a>
            </div>
        </form>
    </div>
    
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5>Información Actual</h5>
            </div>
            <div class="card-body">
                <p><strong>ID:</strong> @Model.Id</p>
                <p><strong>Pedido:</strong> #@Model.IdPedido</p>
                <p><strong>Producto:</strong> @Model.IdProducto</p>
                <p><strong>Cantidad:</strong> @Model.Cantidad</p>
                <p><strong>Precio Unitario:</strong> $@Model.PrecioUnitario</p>
                <p><strong>Subtotal:</strong> <span class="text-primary fw-bold">$@(Model.Cantidad * Model.PrecioUnitario)</span></p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Calcular subtotal dinámicamente
            var cantidadInput = document.getElementById('Cantidad');
            var precioInput = document.getElementById('PrecioUnitario');
            
            function calcularSubtotal() {
                var cantidad = parseFloat(cantidadInput.value) || 0;
                var precio = parseFloat(precioInput.value) || 0;
                var subtotal = cantidad * precio;
                
                // Actualizar cualquier elemento que muestre el subtotal
                var subtotalElements = document.querySelectorAll('.subtotal-display');
                subtotalElements.forEach(function(el) {
                    el.textContent = '$' + subtotal.toFixed(2);
                });
            }
            
            if (cantidadInput) {
                cantidadInput.addEventListener('input', calcularSubtotal);
            }
            
            if (precioInput) {
                precioInput.addEventListener('input', calcularSubtotal);
            }
        });
    </script>
}
